<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:layout_marginBottom="10.0dip">
    <!-- regstration form -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/llRegPage1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!--full name of user -->


            <TextView
                android:id="@+id/etFnamep"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:hint="@string/text_fname_caps"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/color_text_dark"
                android:padding="16.0dip"
                android:drawableStart="@mipmap/user"
                android:drawableLeft="@mipmap/user"
                 />


            <!--gender of user -->





                <TextView
                    android:id="@+id/typep"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:hint="@string/text_gnder_caps"
                    android:maxLines="1"
                    android:spinnerMode="dropdown"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/color_text_dark"
                    android:drawableStart="@mipmap/gender"
                    android:drawableLeft="@mipmap/gender"
                    android:drawablePadding="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:padding="16dp" />



            <!-- user phone  -->



                <EditText
                    android:id="@+id/etmobilep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"

                    android:hint="@string/text_number"
                    android:maxLines="1"
                    android:drawablePadding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/color_text_dark"
                    android:drawableStart="@mipmap/jawal"
                    android:drawableLeft="@mipmap/jawal"
                    android:padding="16.0dip" />

            <EditText
                android:id="@+id/etMailp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:hint="@string/text_email"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/color_text_dark"
                android:drawableStart="@mipmap/jawal"
                android:drawableLeft="@mipmap/jawal"
                android:padding="16.0dip" />

            <!-- user email -->




                <!--TextView
                    android:id="@+id/etEmailp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/text_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/color_text_dark"
                    android:drawableStart="@mipmap/msg"
                    android:drawableLeft="@mipmap/msg" /!-->





            <EditText
                android:id="@+id/etPasswordp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableStart="@mipmap/lock"
                android:hint="@string/text_passs"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10.0dip"
                android:drawablePadding="10dp"
                android:paddingRight="10.0dip"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/color_text_dark"
                android:drawableLeft="@mipmap/lock"
                android:padding="16.0dip" />


            <!--reenter user password -->


            <EditText
                android:id="@+id/etReTypePasswordp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/text_retype_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10.0dip"
                android:drawablePadding="10dp"
                android:paddingRight="10.0dip"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/color_text_dark"
                android:drawableStart="@mipmap/lock"
                android:drawableLeft="@mipmap/lock"
                android:padding="16.0dip" />


            <!--  city -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/map"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:id="@+id/etAddress"  />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>





        </LinearLayout>

        <!--  submit -->
        <RelativeLayout
            android:id="@+id/rlSubmitButtonWrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnregp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/raduis_corner_green"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/fp_font_size" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
