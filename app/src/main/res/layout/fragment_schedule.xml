<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="16dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf ="@+id/textView8"
        android:layout_toEndOf="@+id/textView8">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_rect"
            android:text="https://play.google.com/store/apps/details?id=art4moslm.info.akhdmny"
            android:ems="10"
            android:textSize="12dp"
            android:id="@+id/editText10"
            android:gravity="right|center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:paddingRight="5dp" />

        <TextView
            android:text="@string/lien_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:id="@+id/textView9"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true">

        <Button
            android:text="@string/txt_share"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnShare"
            android:layout_below="@+id/button6"
            android:background="@color/colorYellow"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:drawableRight="@mipmap/sharew"
            android:textColor="@android:color/white"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <Button
            android:text="@string/txt_copier"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:textColor="@android:color/white"
            android:background="@color/colorGreen"
            android:id="@+id/btnCopie"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <TextView
        android:text="@string/lien_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/line1"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invitationTxt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/txt_code"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>
