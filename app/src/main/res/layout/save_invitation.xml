<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
 >

    <!-- make circular image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/white_circled_shape"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
        <TextView
        android:id="@+id/DriverNm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:text="@string/code_invit"

            android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"/>

    <EditText
        android:id="@+id/etObserv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/invitCode"
        android:lines="4"
        android:gravity="top"
        android:background="@drawable/rectangle"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="7dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btn_cancel"
        android:background="@drawable/raduis_corner_red"


        android:text="@string/text_havent"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/btnsend"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:textAllCaps="false"

        android:background="@drawable/raduis_corner_green"


        android:text="@android:string/ok"

        android:textColor="@android:color/white" />




</LinearLayout>

</LinearLayout>
    </RelativeLayout>
</RelativeLayout>