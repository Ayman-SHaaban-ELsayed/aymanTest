<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_gray"
    android:nestedScrollingEnabled="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/colorPrimary"
            android:fillViewport="true"/>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <!--  NO OF SERVICES-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/txt_noservice"
                    android:textColor="@color/black"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/txt_servicecost"
                    android:textColor="@color/black"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="5dp" />


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/txt_delivercost"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="5dp" />


            </LinearLayout>


            <!--SERVICE COST -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp">
                <art4moslm.info.akhdmny.user.component.MyFontTextView
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/et_noservice"
                    android:hint="@string/et_service"
                    android:background="@drawable/mybutton_white"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:id="@+id/et_servicecost"
                    android:hint="@string/et_servicecost"
                    android:background="@drawable/mybutton_white"
                    android:layout_marginBottom="5dp" />


                <art4moslm.info.akhdmny.user.component.MyFontTextView
                    android:id="@+id/et_delivercost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="@string/et_delivercost"
                    android:background="@drawable/mybutton_white"
                    android:layout_marginBottom="5dp" />




            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:textColor="#AB2E2E"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/txt_totalcost" />

            <art4moslm.info.akhdmny.user.component.MyFontTextView
                android:layout_height="wrap_content"
                android:textColor="#AB2E2E"
                android:textColorHint="#AB2E2E"
                android:layout_width="match_parent"
                android:id="@+id/et_totalcost"
                android:hint="@string/et_totalcostt"
                android:background="@drawable/mybutton_white"

                android:layout_marginTop="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_gprs"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="24dp"
                android:checked="true"
                android:textColor="@color/black"
                android:textColorLink="@color/appcolo"
                android:theme="@style/BrandedSwitch"
                android:layout_alignParentLeft="true" />



            <TextView
                android:layout_toEndOf="@+id/switch_gprs"
                android:id="@+id/txt_c"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="bottom"
                android:text="@string/txt_disqount_points"
                android:layout_toRightOf="@+id/switch_gprs"
                android:layout_marginLeft="10dp" />



        </RelativeLayout>







        <Button
            android:id="@+id/btnOrdersubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/app_colour"
            android:text="@string/text_submit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentLeft="true" />


    </LinearLayout>
</ScrollView>


