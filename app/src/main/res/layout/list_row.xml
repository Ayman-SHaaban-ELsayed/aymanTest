<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRed"
    android:padding="10dp"
    android:paddingStart="5dp"
    android:id="@+id/list_color"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp">
    <!-- android:background="@drawable/list_row_selector"-->

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_list"
        android:layout_alignParentLeft="true" />
    <!-- MyOrderModel Title -->
    <!-- Genre -->
    <TextView
        android:id="@+id/genre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@id/linearLayout"
        android:layout_toEndOf="@id/thumbnail"
        android:textSize="10sp"
        android:drawableStart="@drawable/location"
        android:text="samir ebrahim "
        android:layout_toRightOf="@id/thumbnail"
        android:drawableLeft="@drawable/location"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <!-- Rating -->
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linearLayout"
        android:gravity="center"

        android:textColor="@color/white"
        android:layout_toEndOf="@+id/genre"
        android:textSize="10sp"
        android:drawableStart="@drawable/ic_action_check_circle"
        android:text="ahmed "
        android:layout_toRightOf="@+id/genre"
        android:drawableLeft="@drawable/ic_action_check_circle" />



    <!-- Release Year -->

    <!-- Rightend Arrow
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow"
        android:src="@mipmap/back"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout"
    android:layout_alignTop="@+id/thumbnail"
    android:layout_toRightOf="@+id/thumbnail"
    android:layout_toEndOf="@+id/thumbnail">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myorderstring"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="225"
 />
</LinearLayout>

    <TextView
        android:id="@+id/releaseYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:drawableStart="@drawable/ic_action_date_range"
        android:textSize="10sp"
        android:text="22-2-2017"
        android:drawableLeft="@drawable/ic_action_date_range"
        android:layout_alignBaseline="@+id/genre"
        android:layout_alignBottom="@+id/genre"
        android:layout_toRightOf="@+id/rating"
        android:layout_toEndOf="@+id/rating" />


</RelativeLayout>