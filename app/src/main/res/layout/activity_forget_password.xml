<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <include
        layout="@layout/toolbar_top"
        android:layout_width="match_parent"
        android:id="@+id/include"

        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_fp_margin"
        android:layout_marginRight="@dimen/dimen_fp_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etForgotText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_forgot_password"
            android:textColor="@color/color_app_gray"
            android:textSize="@dimen/fp_font_size"
            android:layout_marginTop="26dp" />

        <EditText
                android:id="@+id/etForgetEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_email"
                android:inputType="textCapSentences|textAutoCorrect|textEmailAddress"

                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/color_app_gray"
                android:paddingStart="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRegisterSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/tvForgetSubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/raduis_corner_yellow_small"
            android:gravity="center"
            android:text="@string/text_submit"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>
</LinearLayout>



