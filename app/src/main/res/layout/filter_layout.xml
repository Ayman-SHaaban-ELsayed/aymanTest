<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton_white"
        android:orientation="vertical"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/txt_service_type"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/typeServiceSpinner"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="26dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/txt_store_name"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/shopNameSpinner"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="26dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/txt_rate_client"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/rateClientSpinner"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="26dp"
            android:background="@android:color/darker_gray"/>
        <TextView
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
        android:text="@string/txt_order_request"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/OrderOrderesSpinner"  />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="26dp"
            android:background="@android:color/darker_gray"/>


        <Button
            android:id="@+id/btn_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/raduis_corner_green"
            android:text="@string/txt_filter"
            android:textStyle="bold"
            android:textColor="@color/ofWhite"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>
</RelativeLayout>

