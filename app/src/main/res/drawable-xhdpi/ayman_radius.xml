<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient android:angle="-90" android:endColor="@color/text_blue" android:startColor="@color/colorRed" />
            <stroke android:width="1dip" android:color="@color/colorRequest" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/black" />
            <!--            solid here is the back ground when data fill-->
            <stroke android:width="1dip" android:color="@color/design_default_color_primary_variant" />

        </shape>
    </item>
    <item>
        <shape android:shape="ring">
            <corners android:radius="20dp" />
            <gradient android:angle="-90" android:endColor="@color/txtcolor" android:startColor="#AEB6BF" />
            <stroke android:width="1dip" android:color="#AAB7B8" />

        </shape>


    </item>
</selector><!--<?xml version="1.0" encoding="utf-8"?>-->
