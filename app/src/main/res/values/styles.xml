<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTheme">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="actionsustom">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="app">
        <attr name="hintText" format="string" />
        <attr name="inputType" format="integer">

            <!-- There is no content type. The text is not editable. -->
            <flag name="none" value="0x00000000" />
            <!--
    Just plain old text. Corresponds to
    {@link android.text.InputType#TYPE_CLASS_TEXT} |
    {@link android.text.InputType#TYPE_TEXT_VARIATION_NORMAL}.
            -->
            <flag name="text" value="0x00000001" />

        </attr>
    </declare-styleable>
    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean" />
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_shadow" format="boolean" />
        <attr name="civ_shadow_color" format="color" />
        <attr name="civ_shadow_radius" format="float" />
    </declare-styleable>
    <!-- Fullscreen application theme. -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    <style name="BrandedSwitch" parent="AppTheme">
        <item name="colorAccent">#0fabf9</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>
    <style name="styleYellow" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="colorPrimary">@color/color_green</item>
    </style>
<!--    -->
<!--    com.google.android.material.textfield.TextInputLayout-->




    <style name="salek_text_input_style.main" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/activity_horizontal_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/activity_horizontal_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/activity_horizontal_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/activity_horizontal_margin</item>
        <item name="boxStrokeColor">@color/text_blue</item>
        <item name="boxStrokeErrorColor">@color/text_blue</item>
        <item name="android:textColorHint">@color/text_blue</item>
        <item name="hintTextColor">@color/text_blue</item>
        <item name="placeholderTextColor">@color/text_blue</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/text_blue</item>

    </style>
    <style name="salek_text_input_style.password" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/activity_horizontal_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/activity_horizontal_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/activity_horizontal_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/activity_horizontal_margin</item>
        <item name="boxStrokeColor">@color/text_blue</item>
        <item name="boxStrokeErrorColor">@color/text_blue</item>
        <item name="android:textColorHint">@color/text_blue</item>
        <item name="hintTextColor">@color/text_blue</item>
        <item name="placeholderTextColor">@color/text_blue</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/text_blue</item>

    </style>
</resources>
